{{#if addNewAnswer}}
<h1>New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Name</label><br>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Answer</label><br>
        {{textarea row=2 value=content id="content"}}
      </div>
      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>Add Answer</button>
{{/if}}
