{{#if addNewQuestion}}
<h3>New Question</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Name</label><br>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Question</label><br>
        {{textarea row=2 value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="note">Note</label><br>
        {{textarea row=2 value=note id="note"}}
      </div>
      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>Add Question</button>
{{/if}}
