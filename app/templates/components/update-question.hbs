{{#if updateQuestionForm}}
  <div>
    <form>
      <div class="form-group">
        <label for="author">Name</label><br>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="content">Question</label><br>
        {{textarea row=2 value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="note">Note</label><br>
        {{textarea row=2 value=note id="note" placeholder=question.note}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}

  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
<br>
<br>
<button {{action 'delete' question}}>Delete</button>
<hr>
